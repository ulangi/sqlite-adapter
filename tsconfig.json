{
 "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "lib": ["es6", "dom"],
    "noImplicitAny": true,
    "declaration": true,
    "strictNullChecks": true,
    "strict": true,
    "noEmitOnError": true,
    "sourceMap": true,
    "sourceRoot": "src",
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts"
  ]
}

